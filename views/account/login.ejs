<main>
    <div class="login-container">
        <form id="loginForm" action="/account/login" method="post"> <!-- Suponiendo que el método POST será para el login -->
          <div class="form-group">
            <label for="account_email">Email</label>
            <input type="email" name="account_email" id="accountEmail" required placeholder="Enter your email">
          </div>
    
          <div class="form-group">
            <label for="account_password">Password</label>
            <input type="password" name="account_password" id="accountPassword" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
          </div>
    
          <div class="form-group">
            <button type="submit">Log In</button>
          </div>
        </form>
    
        <div class="signup-link">
          <p>Don't have an account? <a href="/account/register">Register here</a></p>
        </div>
      </div>
  </main>

